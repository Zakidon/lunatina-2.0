---
interface Props {
  icon: string;
  title: string;
  text: string;
  link: string;
  linkText: string;
  colorClass?: string;
}
const {
  icon,
  title,
  text,
  link,
  linkText,
  colorClass = 'text-indigo-600 dark:text-indigo-400'
} = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-md hover:shadow-lg transition border border-gray-100 dark:border-gray-700">
  <div class="text-3xl mb-4">{icon}</div>
  <h3 class="text-xl font-bold mb-3">{title}</h3>
  <p class="mb-4 text-gray-700 dark:text-gray-300">{text}</p>
  <a href={link} class={`${colorClass} hover:underline font-medium inline-flex items-center gap-1`}>
    {linkText} â†’
  </a>
</div>