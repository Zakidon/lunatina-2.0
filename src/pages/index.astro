---
// src/pages/index.astro
import Layout from '../layouts/BaseLayout.astro';
import Slider from '../components/Slider.astro';
import SolutionCard from '../components/SolutionCard.astro';
import { solutions } from '../data/solutions';
---

<Layout title="Lunatina — Готовые решения для мастеров" description="Запустите сайт, SMM и автоматизацию за 2 недели без бюджета">
  <main class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Slider -->
    <section class="relative overflow-hidden bg-gradient-to-br from-violet-600 to-amber-500 text-white">
      <Slider />
    </section>

    <!-- Solutions -->
    <section class="container mx-auto px-4 py-16 md:py-24">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold font-serif text-gray-900 dark:text-white mb-4">
          Выберите своё решение
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Готовые наборы для быстрого старта — от сайта до первых клиентов
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {solutions.map(solution => (
          <SolutionCard {...solution} />
        ))}
      </div>
    </section>

    <!-- Welcome -->
    <section class="bg-white dark:bg-gray-800 py-16 md:py-20">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold font-serif text-gray-900 dark:text-white mb-6">
          Добро пожаловать в сад решений
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto mb-8">
          Здесь всё уже готово. Выберите нишу, вставьте свои данные — и через 2 недели у вас будет сайт, контент и первые заявки.
        </p>
        <a href="/o-nas" class="inline-block px-8 py-3 bg-amber-500 hover:bg-amber-600 text-gray-900 font-bold rounded-full transition-colors">
          Узнать больше
        </a>
      </div>
    </section>
  </main>
</Layout>